# Environment Configuration for Student Migration DSS
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_CONFIG=development

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
WTF_CSRF_ENABLED=True

# Database Configuration
DATABASE_URL=sqlite:///student_migration_database.db
OUTCOMES_DATABASE_URL=sqlite:///db/student_migration_outcomes.db

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Analytics Configuration
SLOW_QUERY_THRESHOLD=0.3
LOG_LEVEL=INFO
ANALYTICS_ENABLED=True

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=csv,xlsx,json

# API Configuration
API_VERSION=v1
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Monitoring Configuration
MONITORING_ENABLED=True
MONITORING_DASHBOARD_ENABLED=True

# Background Tasks (if using Celery)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# External APIs (if needed)
EXTERNAL_API_KEY=your-external-api-key
EXTERNAL_API_URL=https://api.example.com

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30

# Development/Testing
TESTING=False
DEBUG_TB_ENABLED=False
DEBUG_TB_INTERCEPT_REDIRECTS=False

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax

# Logging Configuration
LOG_TO_FILE=True
LOG_FILE_PATH=logs/application.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# Application Specific
APPLICATION_NAME=Student Migration DSS
APPLICATION_VERSION=1.0.0
SUPPORT_EMAIL=support@example.com
ADMIN_EMAIL=admin@example.com

# Feature Flags
FEATURE_DASHBOARD_ENABLED=True
FEATURE_EXPORT_ENABLED=True
FEATURE_NOTIFICATIONS_ENABLED=True
FEATURE_ADVANCED_ANALYTICS_ENABLED=True